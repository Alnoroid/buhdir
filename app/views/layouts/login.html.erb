<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'vendor/modernizr' %>
  <%= csrf_meta_tags %>

</head>
<body>
<div id="growls"></div>
<% if flash[:notice] %>
    <script type="text/javascript">
        $.growl.notice({title: "Уведомление", message: "<%= flash[:notice] %>",fixed:"true",duration:"1000",location:"tc"});
    </script>
<% end %>
<% if flash[:alert] %>
    <script type="text/javascript">
        $.growl.error({title: "Ошибка", message: "<%= flash[:alert] %>",fixed:"true",duration:"1000",location:"tc"});
    </script>
<% end %>
<%= yield %>

</body>
</html>