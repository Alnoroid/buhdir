<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'vendor/modernizr' %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
  <link href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" rel="stylesheet">
</head>
<body>
<div id="growls"></div>
<% if flash[:notice] %>
    <script type="text/javascript">
        $.growl.notice({title: "Уведомление", message: "<%= flash[:notice] %>",fixed:"true",duration:"5000",location:"tc"});
    </script>
<% end %>
<% if flash[:alert] %>
    <script type="text/javascript">
        $.growl.error({title: "Ошибка", message: "<%= flash[:alert] %>",fixed:"true",duration:"5000",location:"tc"});
    </script>
<% end %>
<div class="contain-to-grid">
  <nav class="top-bar" data-topbar role="navigation" data-options="sticky_on:small,medium,large">
    <ul class="title-area">
      <li class="name">
      <li class="toggle-topbar menu-icon"><a href="#"><span>Меню</span></a></li>
      </li>
    </ul>
    <section class="top-bar-section">
      <ul class="left">

        <% if current_user %>
          <% if current_user.has_role?(:users, :index) %>
            <li class=""><%= link_to '<i class="fi-torso large"></i>Пользователи'.html_safe, users_path %></li>
          <% end %>
          <% if current_user.has_role?(:contacts, :index) %>
            <li class=""><%= link_to '<i class="fi-torsos large"></i>Картотека'.html_safe, contacts_path %></li>
          <% end %>
          <% if current_user.has_role?(:clients, :index) %>
            <li class=""><%= link_to '<i class="fi-torsos large"></i>Кленты'.html_safe, clients_path %></li>
          <% end %>
          <% if current_user.has_role?(:events, :index) %>
            <li class=""><%= link_to '<i class="fi-torsos large"></i>Мероприятия'.html_safe, events_path %></li>
          <% end %>
          <% if current_user.has_role?(:stocks, :index) %>
            <li class=""><a href="#"><i class="fi-home large"></i>Складская</a></li>
          <% end %>
          <% if current_user.has_role?(:prices, :index) %>
            <li class=""><%= link_to '<i class="fi-price-tag large"></i>Прайс'.html_safe, prices_path %></li>
          <% end %>
          <% if current_user.has_role?(:finances, :index) %>
            <li class=""><a href="#"><i class="fi-dollar large"></i>Финансы</a></li>
          <% end %>
          <% if current_user.has_role?(:statistics, :index) %>
            <li class=""><a href="#"><i class="fi-info large"></i>Статистика</a></li>
          <% end %>
        <% end %>
      </ul>
      <ul class="right">
        <li><a href="#">Здравствуйте <%= current_user.name %></a></li>
        <li><%= link_to "Выход", :logout %></li>
      </ul>
    </section>
  </nav>
</div>
    <%= yield %>
</body>
</html>