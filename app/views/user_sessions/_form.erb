<%= form_tag user_sessions_path, :method => :post do %>
    <div class="row">
      <div class="large-12 columns">

    <div class="field">
      <%= label_tag :username, 'Имя пользователя' %><br />
      <%= text_field_tag :username %>
    </div>
      </div>
    </div>
    <div class="field">
      <div class="row">
        <div class="large-12 columns">
      <%= label_tag :password, 'Пароль' %><br />
      <%= password_field_tag :password %>
    </div>
      </div>
    </div>
    <div class="row">
      <div class="large-12 large-centered columns">
    <div class="actions">
      <%= submit_tag("Войти", :class=>"button expand") %>
    </div>
      </div>
    </div>
<% end %>