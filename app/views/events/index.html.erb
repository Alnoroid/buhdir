<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Place</th>
      <th>Place type</th>
      <th>Event type</th>
      <th>Date start</th>
      <th>Date finish</th>
      <th>Date load</th>
      <th>Client</th>
      <th>Greeter</th>
      <th>Description</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.place %></td>
        <td><%= event.place_type %></td>
        <td><%= event.event_type %></td>
        <td><%= event.date_start %></td>
        <td><%= event.date_finish %></td>
        <td><%= event.date_load %></td>
        <td><%= event.client %></td>
        <td><%= event.greeter %></td>
        <td><%= event.description %></td>
        <td><%= event.condition %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

