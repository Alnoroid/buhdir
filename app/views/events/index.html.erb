<% provide(:title, "Мероприятия") %>
<% content_for :head do %>

<% end %>


<p></p>
<div class="row valign-middle">
  <div class="large-6 small-12 medium-6 columns">
    <%= smart_listing_controls_for(:events, {class: "form-inline"}) do %>
        <div class="row">
          <div class="large-4 columns">
            <label>Кураторы
            <%=select_tag :curator_filter, options_from_collection_for_select(User.all,"id","name") , include_blank: "Все" %>
            </label>
          </div>
          <div class="large-4 columns">
            <label>Состояние
            <%=select_tag :state_filter, options_for_select(["ПРЕДЛОЖЕНИЕ","В РАБОТЕ","ТОЧНО","ОТМЕНА","ПЕРЕНОС"]), include_blank: "Все" %>
            </label>
          </div>
          <div class="large-4 columns">
            <label>После даты
              <%= text_field_tag :date_filter %>
            </label>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <label>Поиск
          <%= text_field_tag :filter, '', class: "search form-control", placeholder: "Поиск..." %>
                </label>
            </div>
        </div>
    <% end %>
  </div>
  <div class="large-6 small-12 medium-6 columns">
    <%= link_to 'Создать коммерческое предложение', new_event_path, class: "button expand" %>
  </div>
</div>
<%= smart_listing_render :events %>
<script>
    $('#date_filter').fdatetimepicker({
        language: 'ru',
        weekStart: 1,
        minuteStep: 15,
        minView: 2,
        autoclose: true,
        format: "dd.mm.yyyy"
    });
</script>