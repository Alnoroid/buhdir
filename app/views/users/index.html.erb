<% provide(:title, "Пользователи") %>
<div class="row">
  <div class="large-12 small-12 columns large-centered">
    <ul class="tabs" data-tab>
      <li class="tab-title active"><a href="#user">Пользователи</a></li>
      <li class="tab-title"><a href="#role">Роли</a></li>
    </ul>

    <div class="tabs-content">
      <div class="content active" id="user">
        <table>
          <thead>
          <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Роль</th>
            <th>Изображение</th>
            <th colspan="4"></th>
          </tr>
          </thead>

          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.surname %></td>
                <td><%= user.role.name %></td>
                <td><%= image_tag user.userpic.url(:thumb), alt: user.surname%></td>
                <td><%= link_to 'Подробнее', user %></td>
                <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
                <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <%= link_to 'Новый пользователь', new_user_path %>
      </div>
      <div class="content" id="role">
        <table>
          <thead>
          <tr>
            <th>Название</th>
            <th>Краткое описание</th>
            <th>Описание</th>

            <th colspan="3"></th>
          </tr>
          </thead>
#TODO доделать роли
          <tbody>
        <% @roles.each do |role| %>
            <tr>
              <td><%= role.name %></td>
              <td><%= role.title %></td>
              <td><%= role.description %></td>
              <td><%= link_to 'Удалить',role , method: :delete, data: { confirm: 'Вы уверены?' } %></td>
            </tr>

        <% end %>
          </tbody>
        </table>
        <%= link_to 'Новая роль', new_user_path %>
      </div>
    </div>


    <br>


  </div>
</div>
