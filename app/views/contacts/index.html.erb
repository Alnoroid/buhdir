<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>
<%= link_to 'Новый контакт', new_contact_path %>

<table>
  <thead>
    <tr>
      <th>Наименование</th>
      <th>Контактное лицо</th>
      <th>Адресс</th>
      <th>Откуда</th>
      <th>Сайт</th>
      <th>Email</th>
      <th>Описание</th>
      <th>Дополнительно</th>
      <th>Оклад</th>
      <th>Телефон 1</th>
      <th>Телефон 2</th>
      <th>Рейтинг</th>
      <th>Опубликован</th>
      <th>Дата публикации</th>
      <th>Горячее</th>
      <th>Кто пригласил</th>
      <th>Тип контакта</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.contact_name %></td>
        <td><%= contact.address %></td>
        <td><%= contact.w_contact %></td>
        <td><%= contact.web_address %></td>
        <td><%= contact.email %></td>
        <td><%= contact.description %></td>
        <td><%= contact.special %></td>
        <td><%= contact.fee %></td>
        <td><%= contact.phone1 %></td>
        <td><%= contact.phone2 %></td>
        <td><%= contact.rating %></td>
        <td><%= contact.publish %></td>
        <td><%= contact.publish_date %></td>
        <td><%= contact.hot %></td>
        <td><%= contact.user.name %></td>
        <td><%= contact.contact_type.name %></td>
        <td><%= link_to 'Показать', contact %></td>
        <td><%= link_to 'Редактировать', edit_contact_path(contact) %></td>
        <td><%= link_to 'Удалить', contact, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

